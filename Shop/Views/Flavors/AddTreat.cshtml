@model Shop.Models.Flavor

<h2>Add a treat</h2>

<h4>Add a treat to this flavor: @Html.DisplayFor(m => m.Type)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(f => f.FlavorId)

    <p>@Html.Label("Select treat"): @Html.DropDownList("TreatId")</p>

    <input type="submit" value="Save" class="btn btn-default"/>
}

<p>@Html.ActionLink("Back to list", "Index")</p>