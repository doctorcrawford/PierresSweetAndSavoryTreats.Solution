@{
  Layout = "_Layout";
}

<h2>Flavors</h2>

<hr />

<div class="basic">
  @if (@Model.Count == 0)
  {
    <h3>No flavors have been added yet!</h3>
  }

  @foreach (Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Type}", "Details", new { id = flavor.FlavorId })</li>
  }
</div>

<div class="links">
  <p>@Html.ActionLink("Add new flavor", "Create")</p>

  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>